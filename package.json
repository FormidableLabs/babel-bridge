{
  "name": "sanity-translations-experiment",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "pnpx prettier --write '**/*.{ts,tsx}'",
    "test": "pnpx jest --testPathPattern=src",
    "test:watch": "pnpx run test --watch"
  },
  "dependencies": {
    "@portabletext/react": "^3.0.7",
    "@portabletext/types": "^2.0.6",
    "@sanity/client": "^6.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^14.0.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "@types/jest": "^29.5.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "pnpx prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.7.6"
  }
}
